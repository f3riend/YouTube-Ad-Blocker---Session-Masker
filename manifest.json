{
  "manifest_version": 3,
  "name": "YouTube Ad Blocker & Session Masker",
  "version": "1.0",
  "description": "Blocks YouTube ads and masks login session.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
